{
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"outDir": "dist",
		"lib": [
			"esnext"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
		"noUnusedParameters": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
	]
}
